<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/user_profile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        android:text="Profile"
        android:layout_marginEnd="97dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Edit>>"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/user_profile"
        android:layout_alignBottom="@+id/user_profile"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_below="@+id/edit_profile"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_profile"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:drawableLeft="@drawable/user_icon"
            android:textSize="18dp"
            android:drawablePadding="20dp"
            android:paddingStart="15dp"
            android:gravity="left|center"
            android:text="Mathivanan" />

        <TextView
            android:id="@+id/job_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:drawableLeft="@drawable/job_title"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:drawablePadding="20dp"
            android:gravity="left|center"
            android:text="Engeneer"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/company_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:drawableLeft="@drawable/company"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:drawablePadding="20dp"
            android:gravity="left|center"
            android:text="Lakshmi"/>

        <TextView
            android:id="@+id/salary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:drawableLeft="@drawable/ic_edit_category"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:gravity="left|center"
            android:text="25000"/>

        <TextView
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:drawableLeft="@drawable/mail"
            android:textSize="18dp"
            android:drawablePadding="20dp"
            android:paddingLeft="15dp"
            android:padding="10dp"
            android:gravity="left|center"
            android:text="mathivanans333@gmail.com"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Edit"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/edit_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:drawableRight="@drawable/ic_arrow_forward"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:padding="10dp"
            android:text="Income category items"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/edit_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:drawableRight="@drawable/ic_arrow_forward"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:padding="10dp"
            android:text="Expense category items"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/edit_choose_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:drawableRight="@drawable/ic_arrow_forward"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:padding="10dp"
            android:text="Choose app language"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />



    </LinearLayout>
</RelativeLayout>