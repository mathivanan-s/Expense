<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/silver"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/expense_month_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/spinner_selector"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_below="@id/expense_month_spinner"
        android:id="@+id/empty_notification_text"
        android:background="@color/WhiteSmoke"
        android:src="@drawable/no_data_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:background="@drawable/button_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="37dp"
        android:layout_below="@+id/expense_month_spinner"
        android:id="@+id/data_list_view">

    </ListView>
   <ImageButton
       android:layout_width="35dp"
       android:layout_height="35dp"
       android:layout_alignTop="@+id/expense_total"
       android:layout_alignParentStart="true"
       android:background="@drawable/ic_insert"
       android:id="@+id/imageButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Total=2000"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center"
        android:id="@+id/expense_total"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton" />


</RelativeLayout>