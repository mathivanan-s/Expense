<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:id="@+id/get_price"
            android:paddingLeft="1dp"
            android:textAlignment="textStart"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:text="price"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/price_tag" />

        <ImageView
            android:id="@+id/stop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginStart="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/get_category"
            android:text="category"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/stop" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/get_description"
            android:text="description"
            android:textSize="15dp"
            android:textColor="@color/Black"
            android:paddingLeft="10dp"
            android:layout_below="@+id/get_category"
            android:layout_toEndOf="@+id/stop" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/get_date"
            android:text="Date"
            android:textSize="15dp"
            android:textColor="@color/Black"
            android:paddingLeft="10dp"
            android:layout_below="@+id/get_description"
            android:layout_toEndOf="@+id/stop" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:id="@+id/price_tag"
            android:text="Rs:"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignTop="@+id/stop"
            android:layout_toEndOf="@+id/get_category" />

        <TextView
            android:id="@+id/get_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="end"
            android:paddingRight="10dp"
            android:text="id"
            android:textColor="@color/Black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


</LinearLayout>