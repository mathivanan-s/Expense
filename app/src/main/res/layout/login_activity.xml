<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/expense_background"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/user_icon"
        android:paddingLeft="5dp"
        android:inputType="textPersonName"
        android:hint="  Name..." />

    <EditText
        android:id="@+id/job_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" Job Title..."
        android:paddingLeft="5dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/job_title"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name" />

    <EditText
        android:id="@+id/company_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingLeft="5dp"
        android:inputType="textPersonName"
        android:hint="  Company Name..."
        android:drawableLeft="@drawable/company"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/job_title"
        android:layout_alignStart="@+id/job_title" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingLeft="5dp"
        android:hint="  E-mail..."
        android:drawableLeft="@drawable/mail"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/company_name"
        android:layout_alignStart="@+id/company_name" />

    <EditText
        android:id="@+id/salary"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingLeft="5dp"
        android:hint="  Salary..."
        android:drawableLeft="@drawable/ic_edit_category"
        android:inputType="number"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/save"
        android:background="@drawable/button_shape"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/salary"
        android:layout_alignEnd="@+id/salary" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:layout_alignStart="@+id/salary"
        android:layout_alignTop="@+id/save"
        android:text="cancel" />

</RelativeLayout>